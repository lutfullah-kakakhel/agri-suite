name: agro_assist
description: Farmer-facing irrigation helper app (Flutter + FastAPI)
publish_to: "none"
version: 1.0.0+1

environment:
  sdk: ">=3.5.0 <4.0.0"

dependencies:
  flutter:
    sdk: flutter
  google_fonts: ^6.2.1
  flutter_localizations:
    sdk: flutter
  http: ^1.2.2

  flutter_map: ^8.2.1
  latlong2: ^0.9.1
  geolocator: ^14.0.2

dev_dependencies:
  flutter_test:
    sdk: flutter
  flutter_lints: ^6.0.0
  flutter_launcher_icons: ^0.14.4
  flutter_native_splash: ^2.4.1

flutter:
  uses-material-design: true
  assets:
    - assets/logo.png

flutter_launcher_icons:
  android: true
  ios: false
  image_path: assets/logo.png
  adaptive_icon_background: "#F9F871"
  adaptive_icon_foreground: assets/logo.png

flutter_native_splash:
  color: "#EAFCD7"
  image: assets/logo.png
  android: true
  ios: false
  android_12:
    color: "#EAFCD7"
    image: assets/logo.png
